music_directory     "~/Music"
playlist_directory  "~/Music/Playlists"
db_file             "~/.mpd/database"
log_file            "~/.mpd/log"
pid_file            "~/.mpd/pid"
state_file          "~/.mpd/state"
sticker_file        "~/.mpd/sticker.sql"

bind_to_address     "127.0.0.1"
port                "6600"
zeroconf_enabled    "no"

filesystem_charset  "UTF-8"

input_cache {
    size            "1 GB"
}

audio_output {
    type            "pipewire"
    name            "Primary Audio Stream"
    format          "48000:32:2"
}

audio_output {
    type            "httpd"
    name            "HTTP Stream"
    encoder         "vorbis"
    port            "8899"
    bitrate         "320"
    format          "48000:16:2"
}

audio_output {
    type            "fifo"
    name            "FIFO"
    path            "~/.mpd/fifo"
    format          "44100:16:2"
}

resampler {
    plugin          "soxr"
    quality         "very high"
}
